{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 1,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an object of a selected article from the articles array",
    "queries": [],
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "Living in the shadow of a great man",
        "topic": "mitch",
        "author": "butter_bridge",
        "body": "I find this existence challenging",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 100,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all comments for a given article",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 5,
          "body": "I hate streaming noses",
          "article_id": 1,
          "author": "icellusedkars",
          "votes": 0,
          "created_at": "2020-11-03T21:00:00.000Z"
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "serves an object of a posted comment",
    "queries": [],
    "exampleResponse": {
      "comment": {
        "comment_id": 19,
        "body": "I love this",
        "article_id": 1,
        "author": "butter_bridge",
        "votes": 0,
        "created_at": "2020-11-03T21:00:00.000Z"
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "serves an object of update article",
    "queries": [],
    "exampleResponse": {
      "article": {
        "article_id": 2,
        "title": "Sony Vaio; or, The Laptop",
        "topic": "mitch", 
        "author": "icellusedkars",
        "body": "call me mitchell",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 100,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "serves an empty body of deleted comment",
    "queries": [],
    "exampleResponse": {}
    
  },
  "GET /api/users": {
    "description": "serves an array of user objects",
    "queries": [],
    "exampleResponse": {
      "users": [
        {
          "username": "butter_bridge",
          "name": "johnny",
          "avatar_url": "https://www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg"
        }
      ]
    }
  }
}
